<!DOCTYPE html>
<html>
  <head>
    <title>Atree</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jscroll/2.4.1/jquery.jscroll.min.js"></script>
  </head>

  <body>
    <header>
      <h1 class="home"><%= link_to 'Atree', root_path %></h1>
      <nav class="pc-nav">
        <% if user_signed_in? %>
          <ul class="menu-group">
            <li class="menu-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
            <li class="menu-item"><%= link_to "新規投稿", new_post_path %></li>
            <li class="menu-item"><%= link_to "マイページ", user_path(current_user) %></li>
            <li class="menu-item"><%= link_to "投稿一覧", posts_path %></li>
        <% else %>
            <li class="menu-item"><%= link_to "ログイン", new_user_session_path %></li>
            <li class="menu-item"><%= link_to "新規登録", new_user_registration_path %></li>
        <% end %>
          </ul>
      </nav>
    </header>
        <%= yield %>
    <footer>
        <p>Atree©︎ 2021</p>
    </footer>
  </body>
</html>
